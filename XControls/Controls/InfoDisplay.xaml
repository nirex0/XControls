<UserControl x:Class="XControls.Controls.InfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" Background="#BF12151E" Width="160">
    <Grid>
        <local:XLabel x:Name="label_title" Content="{Binding Title}" HorizontalContentAlignment="Center"  Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBlock  x:Name="textblock_info" Margin="10,40,10,10" TextWrapping="Wrap" Text="{Binding Info}" Foreground="sc#1, 1, 0.715693533, 0" FontFamily="Global User Interface" FontWeight="Bold"  LineHeight="24"/>
    </Grid>
</UserControl>
