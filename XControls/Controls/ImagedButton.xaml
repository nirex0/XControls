<UserControl x:Class="XControls.Controls.ImagedButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XControls.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="150" Height="45">
    <Grid>
        <local:XButton x:Name="button"         VerticalContentAlignment="Center" Content="  Button Text" HorizontalContentAlignment="Left" Height="45" VerticalAlignment="Top" Command="{Binding UserControlDefaultButtonCommand}"/>
        <Rectangle x:Name="rectangle"             Height="45" VerticalAlignment="Top" HorizontalAlignment="Right" Width="45">
            <d:Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF80FF00" Offset="0"/>
                    <GradientStop Color="#FFFFDC00" Offset="1"/>
                </LinearGradientBrush>
            </d:Rectangle.Fill>
            
            <d:Rectangle.OpacityMask>
                <ImageBrush x:Name="rectangle_image" ImageSource="/XControls;component/Icons/3D Rotate.png" />
            </d:Rectangle.OpacityMask>
            
        </Rectangle>
    </Grid>
</UserControl>
